<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yao.onlinemenu.UserSetting">



    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp">


        <TextView
            android:id="@+id/textViewse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帳號管理"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp">

            <TextView
                android:text="帳號"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewse2"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/imageView8"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewse3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="15sp"
                android:text="test123" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp">

            <TextView
                android:text="密碼"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewse4"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/imageView8"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewse5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="15sp"
                android:text="test321" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonse1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:text="修改密碼"
            android:textSize="@dimen/txt_size5"
            android:layout_marginLeft="90dp" />


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#fe979595"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/textViewse6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知顯示"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />


        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioButtonse11"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" >

            <RadioButton
                android:id="@+id/radioButtonse0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="關閉通知"
                android:onClick="show"/>

            <RadioButton
                android:id="@+id/radioButtonse1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:text="震動"
                android:onClick="show"/>

            <RadioButton
                android:id="@+id/radioButtonse2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提示燈"
                android:layout_marginLeft="120dp"
                android:onClick="show"/>

            <RadioButton
                android:id="@+id/radioButtonse3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="震動+提示燈"
                android:checked="true"
                android:layout_marginLeft="120dp"
                android:onClick="show"/>
        </RadioGroup>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#fe979595"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/textViewse8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="優惠通知"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />



        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp">

            <TextView
                android:text="店家更新通知"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewse9"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/imageView8"
                android:layout_alignParentStart="true" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="開"
                tools:checked="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp">

            <TextView
                android:text="評論回應"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewse11"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/imageView8"
                android:layout_alignParentStart="true" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="開"
                tools:checked="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp">

            <TextView
                android:text="餐前提醒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewse12"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/imageView8"
                android:layout_alignParentStart="true" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:text="開"
                tools:checked="true" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonse2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="設定時間"
            android:textSize="@dimen/txt_size5"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"/>







    </LinearLayout>



    </ScrollView>



</android.support.constraint.ConstraintLayout>
