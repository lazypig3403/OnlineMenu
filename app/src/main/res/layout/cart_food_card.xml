<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <ImageView
            android:id="@+id/cart_foodImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/food"
            android:layout_weight="0.80" />

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/cart_foodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/cart_foodPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="0.4" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/minusButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_minus"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.05" />
        <TextView
            android:id="@+id/count_SC"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/txt_size2"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/addButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_add"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.20" />
    </LinearLayout>

</android.support.v7.widget.CardView>