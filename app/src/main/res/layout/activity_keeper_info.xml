<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yao.onlinemenu.StoreKeeperInfo">


        <ImageView
            android:id="@+id/KeeperPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/KeeperPhoto"
            android:background="@color/colorBlack"
            android:stretchColumns="*">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/textView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorGrey"
                    android:padding="@dimen/padding"
                    android:text="帳號"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_size3" />

                <TextView
                    android:id="@+id/KeeperID"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorWhite"
                    android:padding="@dimen/padding"
                    android:text="123456"
                    android:textSize="@dimen/txt_size3" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/textView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorGrey"
                    android:text="密碼"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_size3" />

                <TextView
                    android:text="123456"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:id="@+id/KeeperPW"
                    android:textSize="@dimen/txt_size3" />

                <TextView
                    android:id="@+id/updatePW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:text="變更"
                    android:textAlignment="viewEnd"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorGrey"
                    android:text="姓名"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size3"
                    android:textAlignment="center" />

                <TextView
                    android:text="桑"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:id="@+id/KeeperName"
                    android:textSize="@dimen/txt_size3" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorGrey"
                    android:padding="@dimen/padding"
                    android:text="性別"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_size3" />

                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:id="@+id/KeeperSex"
                    android:textSize="@dimen/txt_size3" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorGrey"
                    android:text="手機"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size3"
                    android:textAlignment="center" />

                <TextView
                    android:text="0975"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:id="@+id/KeeperCell"
                    android:textSize="@dimen/txt_size3" />

                <TextView
                    android:id="@+id/updateCell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:text="變更"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin"
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:background="@color/colorGrey"
                    android:padding="@dimen/padding"
                    android:text="信箱"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_size3"
                    android:textStyle="bold" />

                <TextView
                    android:text="aaaaaaaa@gmail.com"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:id="@+id/KeeperMail"
                    android:textSize="@dimen/txt_size3" />

                <TextView
                    android:id="@+id/updateMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/padding"
                    android:background="@color/colorWhite"
                    android:text="變更"
                    android:textAlignment="viewEnd" />
            </TableRow>
        </TableLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>

